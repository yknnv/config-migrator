#!/usr/bin/env php<?phpuse Yknnv\ConfigMigrator\Exception\ConfigException;include_once('../include.php');$longopts  = [    'h:' => 'handler:',    'c:' => 'command:',    'n:' => 'name:',    'v:' => 'value:',    ''   => 'help',];$options = getopt(implode('', array_keys($longopts)), $longopts);if(isset($options['help'])){    echo "    Use commands: \n\n    -h --handler: Handler for your config. \n    -c --command: Command for your config. Available: Add, Update, Delete. \n    -n --name:    Name of parameter. \n    -v --value:   Value for name. \n\n        Example: run -h php -c add -n post_max_size -v 40M \n";    exit();}if(!$options)    die("Please, enter the correct values. Use --help for manual.\n");$handler = $options['handler'] ?? $options['h'];$command = $options['command'] ?? $options['c'];$name = $options['name'] ?? $options['n'];$value = $options['value'] ?? $options['v'];try{    $validator = new Yknnv\ConfigMigrator\Tools\Validator();    $validator->validate($handler, $command, $name, $value);    $handlerClass = 'Yknnv\\ConfigMigrator\\Handlers\\'.$handler;    $handlerObj = new $handlerClass($command, $name, $value);    $handlerObj->exec();}catch (ConfigException $e){    die($e->getMessage());}